{
    "compilerOptions": {
		"resolveJsonModule": true,
        "outDir": "build",
		"rootDir": ".",
		"baseUrl": ".",
		"allowJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"pretty": true,
        "checkJs": false,
    	"module": "CommonJS",
        "target": "ES6"
	},
	"include": [
		"cmd/**/*",
		".config/**/*",
		".flavors/**/*"
	],
	"exclude": [
		".flavors/_copy_/**/*",
		"test/**/*",
		"node_modules/**/*",
		"scripts/**/*",
		"__fixtures__/**/*"
	]
}
