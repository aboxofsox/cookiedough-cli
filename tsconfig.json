{
	"extends": "./.config/tsbase.json",
    "compilerOptions": {
		"resolveJsonModule": true,
        "outDir": "cjs",
		"rootDir": ".",
		"baseUrl": "."
    },
	"include": [
		"cmd/**/*",
		".config/**/*",
		".flavors/**/*"
	],
	"exclude": [
		".flavors/_copy_/**/*",
		"test/**/*",
		"node_modules/**/*",
		"scripts/**/*",
		"cjs/**/*",
		"__fixtures__/**/*"
	]
}
