{
    "compilerOptions": {
        "allowJs": true,
		"esModuleInterop": true,
        "checkJs": false,
        "module": "CommonJS",
        "target": "ES2022",
        "outDir": "bin",
		"baseUrl": "./",
		"declaration": true,
		"paths": {
			"@cookiedough/*": ["*"],
		},
		"rootDirs": [
			"include/*",
			"tools/*",
			"cmd/*",
			"flavors/*"
		]
    },
	"include": [
		"cmd/**/*",
		"include/**/*",
		"flavors/**/*"
	]
}
